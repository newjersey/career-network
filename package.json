{
  "name": "newjersey-career-network",
  "version": "1.0.0",
  "description": "NJ Career Network",
  "repository": {
    "type": "git",
    "url": "https://github.com/newjersey/career-network.git"
  },
  "author": "New Jersey Office of Innovation",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "@material-ui/core": "^4.0.0",
    "@material-ui/icons": "^4.0.0",
    "@material-ui/styles": "^4.0.0",
    "clsx": "^1.0.4",
    "firebase": "^6.2.2",
    "jss": "^9.8.7",
    "next": "^8.1.0",
    "nprogress": "^0.2.0",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-firebaseui": "^3.1.2",
    "react-swipeable-views": "^0.13.3",
    "react-swipeable-views-utils": "^0.13.3",
    "styled-jsx": "^3.2.1",
    "unfetch": "^4.1.0"
  },
  "scripts": {
    "dev": "next",
    "lint": "eslint components pages src",
    "build": "npm run lint && next build",
    "clean": "rm -rf .next/ out/",
    "export": "npm run clean && npm run build && next export -o out && cp -R public/ out/",
    "preview": "npm run export && cd out && serve",
    "release": "git rev-parse --short HEAD | (read hash; gh-pages -t -d out -m \"Release at $hash\" )",
    "deploy": "npm run export && npm run release",
    "start": "next start"
  },
  "devDependencies": {
    "@material-ui/codemod": "^4.0.2",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.13.0",
    "eslint-plugin-react-hooks": "^1.6.0",
    "firebase-tools": "^6.10.0",
    "gh-pages": "^2.0.1",
    "husky": "^2.6.0",
    "lint-staged": "^8.2.1",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "serve": "^11.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*": "pretty-quick --staged",
    "*.{js,jsx}": [
      "npm run lint",
      "git add"
    ]
  }
}
