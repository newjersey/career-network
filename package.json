{
  "name": "newjersey-career-network",
  "version": "1.0.0",
  "description": "NJ Career Network",
  "repository": {
    "type": "git",
    "url": "https://github.com/newjersey/career-network.git"
  },
  "author": "New Jersey Office of Innovation",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "@material-ui/core": "^4.4.0",
    "@material-ui/icons": "^4.2.1",
    "@material-ui/styles": "^4.3.3",
    "clsx": "^1.0.4",
    "dayjs": "^1.8.15",
    "dom-confetti": "^0.1.1",
    "firebase": "^6.5.0",
    "isomorphic-unfetch": "^3.0.0",
    "jss": "^9.8.7",
    "linkifyjs": "^2.1.8",
    "lodash": "^4.17.15",
    "next": "^8.1.0",
    "nprogress": "^0.2.0",
    "prop-types": "^15.7.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-firebaseui": "^4.0.0",
    "styled-jsx": "^3.2.2"
  },
  "scripts": {
    "dev": "next",
    "env": "node scripts/env",
    "env:dev1": "npm run env -- dev1",
    "env:dev2": "npm run env -- dev2",
    "env:dev3": "npm run env -- dev3",
    "env:dev4": "npm run env -- dev4",
    "env:dev5": "npm run env -- dev5",
    "env:ppe": "npm run env -- ppe",
    "env:prod": "npm run env -- prod",
    "lint": "eslint .",
    "build": "npm run env && npm run lint && next build",
    "clean": "rm -rf .next/ out/",
    "airtable:dump": "node scripts/airtableDump",
    "export": "npm run clean && npm run build && next export -o out && cp -R public/ out/",
    "preview": "npm run export && firebase serve",
    "release": "git rev-parse --short HEAD | (read hash; firebase deploy -m \"Release at $hash\" )",
    "deploy": "npm run export && npm run release",
    "start": "next start",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest",
    "test:integration": "firebase emulators:exec --only firestore \"jest -c jest.config.integration.js --runInBand\"",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@firebase/testing": "^0.11.5",
    "@material-ui/codemod": "^4.3.0",
    "@testing-library/jest-dom": "^4.1.0",
    "@testing-library/react": "^8.0.4",
    "@testing-library/react-hooks": "^1.1.0",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "chalk": "^2.4.2",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-config-prettier": "^6.2.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^1.7.0",
    "eslint-plugin-sonarjs": "^0.4.0",
    "execa": "^2.0.4",
    "firebase-tools": "^7.3.1",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "jest-date-mock": "^1.0.7",
    "jest-dom": "^3.5.0",
    "lint-staged": "^9.2.5",
    "nanoid": "^2.0.3",
    "prettier": "1.18.2",
    "pretty-quick": "^1.11.1",
    "react-test-renderer": "^16.9.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*": "pretty-quick --staged --no-restage --bail",
    "*.{js,jsx}": "eslint"
  }
}
